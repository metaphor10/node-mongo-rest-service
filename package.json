{
    "name": "node-mongo-rest-service",
    "version": "0.0.1",
    "description": "REST Service for MongoDB",
    "main": "src/cluster.js",
    "scripts": {
        "checkinstall": "if [ ! -d 'node_modules' ]; then npm install; fi",
        "pretest": "rm -rf coverage/* && npm run checkinstall",
        "test": "MONGO_CONNECTION_STRING=mongodb://localhost:27017/test ./node_modules/.bin/istanbul cover --include-all-sources --root ./src/routes --report none --print none ./node_modules/.bin/_mocha -- --recursive test",
        "posttest": "./node_modules/.bin/istanbul report text && ./node_modules/.bin/istanbul report && ./node_modules/.bin/istanbul check-coverage && ./node_modules/.bin/eslint src test",
        "mocha": "LOGGER_ENABLED=true node_modules/.bin/mocha --recursive test",
        "prestart": "npm run checkinstall",
        "start": "node .",
        "watch": "npm run checkinstall && LOGGER_ENABLED=true ./node_modules/nodemon/bin/nodemon.js -w src ./src/server.js",
        "clean": "rm -rf package-lock.json node_modules coverage && npm install"
    },
    "author": "James Talton",
    "license": "ISC",
    "dependencies": {
        "JSONStream": "^1.3.1",
        "chalk": "^2.1.0",
        "mongodb": "^2.2.31"
    },
    "devDependencies": {
        "eslint": "^4.8.0",
        "istanbul": "^0.4.5",
        "mocha": "^4.0.1",
        "nodemon": "^1.12.1",
        "should": "^13.1.2",
        "supertest": "^3.0.0"
    }
}
